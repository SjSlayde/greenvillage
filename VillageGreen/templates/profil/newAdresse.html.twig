{% extends 'base.html.twig' %}

{% block title %}Contact
{% endblock %}

{% block body %}

	{{ form_start(form) }}
	<div class='container mt-4'>
		<div class='row justify-content-center position-relative text-light'>

			<div class="col-12 mb-3">
				{{ form_row(form.numeroDeRue) }}
			</div>

            <div class="col-12 mb-3">
				{{ form_row(form.nomRue) }}
			</div>

			<div class="col-md-6 col-12 mb-3">
				{{ form_row(form.codePostal) }}
			</div>

			<div class="col-md-6 col-12 mb-3">
				{{ form_row(form.ville) }}
			</div>

            <div class="col-12 mb-3">
				{{ form_row(form.complement) }}
			</div>


			<div class="col-md-6 col-12 position-relative my-5">
				{{ form_row(form.save, {
                        'label': 'Enregistrer',
                        'label_attr': {'class': 'btn position-absolute bottom-0 end-0'}}
				)}}
			</div>
			
		</div>
	</div>

	{{ form_end(form) }}


{% endblock %}