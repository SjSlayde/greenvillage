{% extends 'base.html.twig' %}

{% block title %}Hello GestionController!{% endblock %}

{% block body %}

<div class='container'>
<div class='row justify-content-center'>
    <div class='col-12 text-light'>panneau de gestion produits</div>
    {% for produit in produits %}
                				<div class='col-12 col-sm-6 col-md-4 mb-3'>
					<div class="card text-bg-dark">
						<img src="{{ asset ('images/produits/' ~ produit.NomImage ) }}" class="card-img-top img-fluid imageRubrique" alt="{{ produit.nomProduit }}">
						<a class="link-body-emphasis link-offset-2 link-underline-opacity-0 link-underline-opacity-75-hover" href="">
							<div class="card-img-overlay">
								<h5 class="card-title text-light text-center bg-dark rounded-2">{{ produit.nomProduit | upper }}</h5>
							</div>
						</a>
					</div>
				</div>
    {% endfor %}

    <div class='col-12 text-light'>panneau de gestion rubriques</div>
    {% for rubrique in rubriques %}
        				<div class='col-12 col-sm-6 col-md-4 mb-3'>
					<div class="card text-bg-dark">
						<img src="{{ asset ('images/rubriques-sousRubriques/' ~ rubrique.imageRubrique ) }}" class="card-img-top img-fluid imageRubrique" alt="{{ rubrique.nomRubrique }}">
						<a class="link-body-emphasis link-offset-2 link-underline-opacity-0 link-underline-opacity-75-hover" href="">
							<div class="card-img-overlay">
								<h5 class="card-title text-light text-center bg-dark rounded-2">{{ rubrique.nomRubrique | upper }}</h5>
							</div>
						</a>
					</div>
				</div>
    {% endfor %}

    <div class='col-12 text-light'>panneau de gestion sous-rubriques</div>
    {% for sousRubrique in sousRubriques %}
                				<div class='col-12 col-sm-6 col-md-4 mb-3'>
					<div class="card text-bg-dark">
						<img src="{{ asset ('images/rubriques-sousRubriques/' ~ sousRubrique.imageSousRubrique ) }}" class="card-img-top img-fluid imageRubrique" alt="{{ sousRubrique.nomSousRubrique }}">
						<a class="link-body-emphasis link-offset-2 link-underline-opacity-0 link-underline-opacity-75-hover" href="">
							<div class="card-img-overlay">
								<h5 class="card-title text-light text-center bg-dark rounded-2">{{ sousRubrique.nomSousRubrique | upper }}</h5>
							</div>
						</a>
					</div>
				</div>
    {% endfor %}

    <div class='col-12 text-light'>panneau de gestion utilisateurs</div>
    {% for utilisateur in utilisateurs %}
    <div class="card col-11 col-md-4 text-bg-primary my-3 mx-md-4">
				<div class="card-header">Information de contact</div>
				<div class="card-body">
					<h5 class="card-title">Nom :
						{{ utilisateur.Nom | upper }}
						{{ utilisateur.prenom }}</h5>
					<p class="card-text">Email :
						{{ utilisateur.email }}</p>
					<p class="card-text">Télèphone :
						{{ utilisateur.telephone }}</p>
					<a class="link-body-emphasis link-offset-2 link-underline-opacity-0 link-underline-opacity-75-hover justify-content-end position-absolute top-0 end-0" href="">
					<button class="btn btn-primary">Modifier</button>
					</a>
				</div>
			</div>
        
    {% endfor %}
    </div>
    </div>

{% endblock %}
